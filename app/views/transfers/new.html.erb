  <div class="field">
    <%= form.label :school_id %>
    <%= form.collection_select(:school_id, @schools, :id, :name, prompt: true) %>
  </div>
  
    <div class="field">
    <%= form.label :cohort_id %>
    <%= form.collection_select(:cohort_id, @cohorts, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
